@model Final_Project.Models.Company

@{
    ViewData["Title"] = "CreateCompany";
}
<style>
    .custom-form {
        margin: 0 auto;
        padding: 40px;
        color: black;
        border-radius: 5px;
    }
</style>

<div class="row mt-5">
    <div class="col-md-1 mr-3"></div>

    <div class="col-md-4 ml-3 mt-3 rounded bg-light">
        <form asp-action="CreateCompany" enctype="multipart/form-data" class="custom-form bg-light">
            <h1>Register as Company</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-inline p-2">
                <label asp-for="Logo" class="control-label"></label>
                <input type="file" accept="image/*" asp-for="Logo" class="form-control" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="form-group d-inline p-2">
                <label asp-for="CompanyName" class="control-label"></label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group d-inline p-2">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                @if (TempData["Error"] != null)
                {
                    <span asp-validation-for="EmailAddress" class="text-danger">@TempData["Error"]</span>
                }
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doc1" class="control-label"></label>
                <input type="file" accept="application/pdf" asp-for="Doc1" class="form-control" />
                <span asp-validation-for="Doc1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doc2" class="control-label"></label>
                <input type="file" accept="application/pdf" asp-for="Doc2" class="form-control" />
                <span asp-validation-for="Doc2" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <input asp-for="Trusted" value="False" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn " style="background-color: #00aeef" />
            </div>
        </form>
    </div>
    @if (TempData["joseph"] != null)
    {
        <span class="text-danger">@TempData["joseph"]</span>
    }
    <div class="col-md-1 mr-3"></div>
    <div class="col-md-4 mr-3 mt-0 ">
        <img src="https://img.freepik.com/free-vector/placeholder-concept-illustration_114360-4983.jpg?w=740&t=st=1689163631~exp=1689164231~hmac=6e1f21db962a8195c0ec826b716bdebf0efb3195feca877b0728f73d68295f73" />
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Final_Project.Models.Job

@{
    ViewData["Title"] = "Post";
}

<h1>Post new Job</h1>
<hr />
<div class="row ml-15">
    <div class="col-md-4">
        <form asp-action="Post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Jop_Title" class="control-label"></label>
                <input asp-for="Jop_Title" class="form-control" />
                <span asp-validation-for="Jop_Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jop_Description" class="control-label"></label>
                <input asp-for="Jop_Description" class="form-control" />
                <span asp-validation-for="Jop_Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jop_Requrement" class="control-label"></label>
                <input asp-for="Jop_Requrement" class="form-control" />
                <span asp-validation-for="Jop_Requrement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeadLine" class="control-label"></label>
                <input asp-for="DeadLine" class="form-control" />
                <span asp-validation-for="DeadLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index" class="btn btn-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

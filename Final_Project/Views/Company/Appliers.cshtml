@model IEnumerable<Final_Project.Models.Applicant_Job>

@{
    ViewData["Title"] = "Appliers";
}
<style>
.card-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
}

.card {
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
    width: 100%;
}

.card-title {
    text-align: center;
    margin-top: 0;
}

.card-body {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
}

.card-horizontal {
    display: flex;
    gap: 10px;
    margin-bottom: 10px;
}

.card-image img {
    max-width: 100%;
    height: auto;
}

.card-details {
    flex-grow: 1;
}

.card-details h4 {
    margin-top: 0;
}

.card-actions a {
    margin-right: 10px;
}

@@media (max-width: 767px) {
    .col-md-4 {
        flex-basis: 100%;
        max-width: 100%;
    }
}
</style>
<h1>Appliers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="card-container">
    @foreach (var group in Model.GroupBy(item => item.JobId))
    {
        var job = group.FirstOrDefault()?.Job;
        if (job != null)
        {
            <div class="card">
                <h3 class="card-title">@job.Jop_Title</h3>

                <div class="card-body">
                    <div class="row">
                        @foreach (var applicantJob in group)
                        {
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-logo">
                                        <img src="@Url.Content("~/Server/Pics/"+applicantJob.Applicant.Picture)" alt="@applicantJob.Applicant.ApplicantName">
                                    </div>
                                    <div class="card-details">
                                        <h3>Name: @applicantJob.Applicant.ApplicantName</h3>
                                        <h4>Title: @applicantJob.Applicant.Title</h4>
                                        <h4><a href="tel:@applicantJob.Applicant.Phone">Phone :@applicantJob.Applicant.Phone</a></h4>
                                        <h4>Age: @applicantJob.Applicant.Age</h4>
                                        <h4><a href="~/Server/CVs/@applicantJob.Applicant.CV" download="">Resume <i class="fa fa-download" aria-hidden="true"></i></a></h4>

                                        <div class="card-actions">
                                            <a class="btn btn-info" href="mailto:@applicantJob.Applicant.EmailAddress">Mail</a>|
                                            <a class="btn btn-info" href="@Url.Action("Waiting", new { id = applicantJob.Id })">Accept</a>
                                            <a class="btn btn-danger" href="@Url.Action("Waiting", new { id = applicantJob.Id })">Reject</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>



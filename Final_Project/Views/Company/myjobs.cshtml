@model IEnumerable<Final_Project.Models.Job>

@{
    ViewData["Title"] = "myjobs";
}

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top:20px;
        width:65%;
        height:30%;
        
        
    }

    .card {
        border: 1px solid black;
        border-radius: 5px;
        width: 100%;
    }

    .card-body {
        padding: 10px;
        margin:10px;
    }

    .card-title {
        font-size: 18px;
        margin-top: 0;
    }

    .card-text {
        margin-bottom: 0;
    }

    .card-actions a {
        margin-right: 10px;
    }
</style>
<div class="row">
    <div class="col-md-2"></div>
    <div class="card-container col-md-8" >
    @foreach (var item in Model)
    {
        <div class="card  bg-light">
            <div class="card-body">
                <h5 class="card-title"><span class="font-weight-bold"> Job Title: </span>@item.Jop_Title  </h5>
                <p class="card-text"><h4 class="font-weight-bold">Job Discription:</h4> @item.Jop_Description</p>
                <p class="card-text"><h4 class="font-weight-bold">Job Requrement:</h4> @item.Jop_Requrement</p>
                <p class="card-text"><h4 class="font-weight-bold">DeadLine:</h4> @item.DeadLine</p>
                <div class="card-actions ">
                    <a href="@Url.Action("EditPost", new { id = item.JobId })" class="btn btn-success">Edit</a>
                    @*<a href="@Url.Action("Details", new { id = item.JobId })" class="btn btn-secondary">Details</a>*@
                    <a onclick="javascript: return SubmitForm();" href="@Url.Action("Delete", new { id = item.JobId })" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
        <p>
            <a asp-action="Post" asp-controller="Company" class="btn btn-primary">Create New</a>
        </p>
</div>
    <div class="col-md-2"></div>

</div>
<script>
    function SubmitForm() {
        var r = confirm("Are you sure you want to Delete?");
        if (r == false) {
            return false;
        }
        // do something
        return true;
    }
</script>
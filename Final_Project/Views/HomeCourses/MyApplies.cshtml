@model IEnumerable<Final_Project.Models.Applicant_Course>

@{
    ViewData["Title"] = "MyApplies";
}

<h1>MyApplies</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.CourseDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Course.Image)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseDescription)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Course.Content)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Course.Price)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Course.Category)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CourseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<Final_Project.Models.Applicant_Course>

@{
    ViewData["Title"] = "MyCourses";
}

@foreach (var item in Model)
{
    <div class="row">
        <div class="card" style="max-width:1000px">
            <div class="row">

                <div class="col-md-4">
                    <img src="@Url.Content("~/Server/Course_Images/"+@item.Course.Image)" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><strong>Course Name: </strong> @Html.DisplayFor(modelItem => item.Course.CourseName)</h5>
                        <h5 class="card-title"><strong>Course Category: </strong>@Html.DisplayFor(modelItem => item.Course.Category)</h5>
                        <h5><strong>Price: </strong>@Html.DisplayFor(modelItem => item.Course.Price)</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@model IEnumerable<Final_Project.Models.Accepted>

@{
    ViewData["Title"] = "notification";
}

<style>
    .card-table {
        border-collapse: collapse;
        width: 100%;
        text-align:center;
    }

        .card-table th,
        .card-table td {
            border: 1px solid black;
            padding: 10px;
        }

</style>
<div class="row mt-4" >
    <div class="col-md-1"></div>
    <div class="table-container col-md-10 ">
        <table class="card-table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                States
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job.Company)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Extra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job.Jop_Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job.Company.CompanyName)
            </td>
@*            <td>
                <a asp-action="Edit" asp-route-id="@item.AcceptedId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AcceptedId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AcceptedId">Delete</a>
            </td>*@
        </tr>
}
    </tbody>
</table>
</div>

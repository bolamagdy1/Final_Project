@model IEnumerable<Final_Project.Models.Applicant_Job>

@{
    ViewData["Title"] = "MyApplies";
}

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
    }

    .card {
        border: 1px solid black;
        border-radius: 5px;
        width: calc(25% - 20px); /* Adjust the width calculation as needed */
        display: inline-block;
        vertical-align: top;
    }

    .card-body {
        padding: 10px;
        margin: 10px;
    }

    .card-title {
        font-size: 18px;
        margin-top: 0;
    }

    .card-text {
        margin-bottom: 0;
    }

    .card-actions a {
        margin-right: 10px;
    }
    /*##############*/
    .hero {
        background: linear-gradient(#0006, #0006), url(https://source.unsplash.com/2600x1200?city);
        /*   background-image: url(https://source.unsplash.com/2600x1200?city); */
        background-position: bottom;
        background-size: cover;
        background-repeat: no-repeat;
        height: 50vh;
        /*   background-color: #eee; */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .hero-inner {
        /*   text-align: center; */
        padding: 0 1.5rem;
    }

    .hero-headline {
        margin: 0;
        color: #fff;
        font-weight: 400;
    }

    h2 {
        margin: 0;
        color: #fff;
        font-weight: 400;
        font-size: 1.2rem;
    }

</style>
<!-- <header class="hero"></header> -->
<header class="hero">


    <div class="hero-inner">

        <h1 class="hero-headline">First Step Depends On You </h1>
        <h2>Lest`s start to change world not us only</h2>

    </div>

</header>

<div class="row">
<div class="col-md-1 "></div>
    <div class="card-container col-md-10">
    @foreach (var item in Model)
    {
        <div class="card  bg-light">
            <div class="card-body">
                <h5 class="card-title"><span class="font-weight-bold"> Job Title: </span>@item.Job.Jop_Title</h5>
                <p class="card-text"><h4 class="font-weight-bold">Company:</h4> @item.Job.Company.CompanyName</p>
                <p class="card-text"><h4 class="font-weight-bold">Job Requrement:</h4> @item.Job.Jop_Requrement</p>
                <p class="card-text"><h4 class="font-weight-bold">Job Description:</h4> @item.Job.Jop_Description</p>
                <div class="card-actions">
                </div>
            </div>
        </div>
    }
</div>
    <div class="col-md-1 "></div>
</div>


                            <p class="card-text"><h4 class="font-weight-bold">Job Description:</h4> @item.Job.Jop_Description</p>
                            <p class="card-text"><h4 class="font-weight-bold">Job Requirement:</h4> @item.Job.Jop_Requrement</p>
                            <p class="card-text"><h4 class="font-weight-bold">Deadline:</h4> @item.Job.DeadLine</p>
                        </div>
                        <div class="card-actions">
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


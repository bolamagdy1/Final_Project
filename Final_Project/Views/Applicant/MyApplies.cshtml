@model IEnumerable<Final_Project.Models.Applicant_Job>

@{
    ViewData["Title"] = "MyApplies";
}

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
        width: 90%;
        height: 30%;
    }

    .card {
        border: 1px solid black;
        border-radius: 5px;
        width: 100%;
    }

    .card-body {
        padding: 10px;
        margin: 10px;
    }

    .card-title {
        font-size: 18px;
        margin-top: 0;
    }

    .card-text {
        margin-bottom: 0;
    }

    .card-actions a {
        margin-right: 10px;
    }
    /*##############*/
    .hero {
        background: linear-gradient(#0006, #0006), url(https://source.unsplash.com/2600x1200?city);
        /*   background-image: url(https://source.unsplash.com/2600x1200?city); */
        background-position: bottom;
        background-size: cover;
        background-repeat: no-repeat;
        height: 50vh;
        /*   background-color: #eee; */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .hero-inner {
        /*   text-align: center; */
        padding: 0 1.5rem;
    }

    .hero-headline {
        margin: 0;
        color: #fff;
        font-weight: 400;
    }

    h2 {
        margin: 0;
        color: #fff;
        font-weight: 400;
        font-size: 1.2rem;
    }

</style>
<!-- <header class="hero"></header> -->
<header class="hero">


    <div class="hero-inner">

        <h1 class="hero-headline">First Step Depends On You </h1>
        <h2>Lest`s start to change world not us only</h2>

    </div>

</header>


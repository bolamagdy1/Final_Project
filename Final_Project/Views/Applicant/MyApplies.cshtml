@model IEnumerable<Final_Project.Models.Applicant_Job>

@{
    ViewData["Title"] = "MyApplies";
}

<h1 class="h1" style="text-align:center">what I applied for</h1>
<table class="table table-striped ml-3 mr-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Job.Jop_Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job.Jop_Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job.Jop_Requrement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job.Company)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Job.Jop_Title)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Job.Jop_Description)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Job.Jop_Requrement)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Job.Company.CompanyName)
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<Final_Project.Models.Company>

@{
    ViewData["Title"] = "List_Companies";
}
<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-left:20px;
    }

    .card {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        width: 300px;
    }

    .card-logo img {
        max-width: 100%;
        height: auto;
        margin-bottom:15px;
    }

    .card-details h3 {
        margin-top: 0;
    }

    .card-actions a {
        margin-right: 10px;
    }
</style>
<h1>List_Companies</h1>
<div class="card-container">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-logo">
                @*<img src="@Url.Content(item.Logo)" alt="Logo">*@
            </div>
            <div class="card-details">
                <h3>Company Name:  @item.CompanyName</h3>
                <p>Company address:  @item.Address</p>
              @*  <p>Doc1: @item.Doc1</p>
                <p>Doc2: @item.Doc2</p>*@
                <p>Trusted: @item.Trusted</p>
            </div>
            <div class="card-actions">
                <a href="@Url.Action("Approve", new { id = item.CompanyId })">Approve</a>
                <a href="@Url.Action("Details", new { id = item.CompanyId })">Details</a>
                <a href="@Url.Action("Delete", new { id = item.CompanyId })">Delete</a>
            </div>
        </div>
    }
</div>
